// .vscode/launch.json
{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",               
      "request": "launch",          
      "name": "Launch Server",      
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start"],
      "cwd": "${workspaceFolder}",  
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"        
      ]
    }
  ]
}
